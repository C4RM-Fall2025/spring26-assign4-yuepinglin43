def getBondPrice_E(face, couponRate, yc):
    bondPrice = 0
    coupon = face * couponRate
    for t, y in enumerate(yc, start=1):
        if t % 5 == 0:
            cf = face + coupon
        else:
            cf = coupon
        pvm = (1 + y) ** -t
        bondPrice += cf * pvm
    return(bondPrice)


# Test values

yc = [.010,.015,.020,.025,.030]
face = 2000000
couponRate = .04
print(getBondPrice_E(face, couponRate, yc))
